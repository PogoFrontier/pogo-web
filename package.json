{
    "name": "pogo-web",
    "version": "1.0.0",
    "description": "Pokemon GO PvP Web Game",
    "main": "index.js",
    "engines": {
        "node": "14.13.0"
    },
    "scripts": {
        "test": "NODE_ENV=test jest",
        "test:dev": "NODE_ENV=test jest --watchAll",
        "start": "npm run build && NODE_ENV=production next start -p $PORT",
        "build": "rm -rf .next && next build",
        "now-build": "rm -rf .next && next build",
        "dev": "next dev -p 3000",
        "export": "npm run build && next export",
        "prettier": "prettier  --write **/*.{ts,tsx,js}",
        "lint:ts": "npm run prettier && tslint -c tslint.json -t stylish --fix {pages,src,server}/**/*.{ts,tsx}",
        "lint:scss": "stylelint --fix {src,pages}/**/*.scss",
        "lint:types": "tsc -p . --noEmit",
        "secrets": "npm run secrets:logout && cross-env-shell BW_SESSION=`bw login projectgrookey@gmail.com --raw` \"npm run secrets:sync\"",
        "secrets:logout": "(bw logout || exit 0)",
        "secrets:login": "bw login projectgrookey@gmail.com",
        "secrets:sync": "bw sync && bw get item c5675478-77d1-41c3-bff3-aca7012a2a87 | fx .notes > \".env.local\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint:types",
            "post-merge": "sh hooks/post-merge.sh",
            "post-rewrite": "sh hooks/post-merge.sh"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run lint:ts"
        ],
        "*.scss": [
            "npm run lint:scss"
        ]
    },
    "keywords": [
        "nextjs",
        "boilerplate",
        "typeccript",
        "react",
        "redux",
        "prettier",
        "stylelint",
        "jest",
        "enzyme",
        "svg sprite",
        "husky",
        "lint staged"
    ],
    "author": "Adib Khan",
    "repository": {
        "type": "git",
        "url": "git@github.com:DeveloperKhan/pogo-web.git"
    },
    "license": "MIT",
    "dependencies": {
        "@adibkhan/pogo-web-backend": "^1.0.36",
        "@babel/core": "7.9.0",
        "@reach/combobox": "^0.13.2",
        "@reach/listbox": "^0.15.0",
        "@reach/menu-button": "^0.12.1",
        "@reach/tabs": "^0.12.1",
        "@reach/tooltip": "^0.15.0",
        "@types/classnames": "^2.2.11",
        "@types/jest": "25.1.4",
        "@types/node": "13.9.5",
        "@types/react": "16.9.27",
        "@types/react-dom": "^17.0.5",
        "@types/react-redux": "7.1.7",
        "@types/svg-sprite-loader": "3.9.1",
        "@types/uuid": "^8.3.0",
        "@types/websocket": "^1.0.1",
        "axios": "^0.21.1",
        "babel-core": "6.26.3",
        "babel-jest": "25.2.4",
        "babel-loader": "8.1.0",
        "babel-plugin-module-resolver": "4.0.0",
        "classnames": "^2.2.6",
        "firebase": "^8.2.1",
        "next": "^10.0.7",
        "next-redux-wrapper": "6.0.2",
        "node-libs-browser": "^2.2.1",
        "node-sass": "^5.0.0",
        "postcss-preset-env": "^5.3.0",
        "react": "17.0.1",
        "react-cookie-consent": "^6.2.3",
        "react-device-detect": "1.17.0",
        "react-dom": "17.0.1",
        "react-loader-spinner": "^4.0.0",
        "react-redux": "7.2.0",
        "react-switch": "^6.0.0",
        "redux": "4.0.5",
        "redux-devtools-extension": "2.13.8",
        "redux-thunk": "2.3.0",
        "svg-sprite-loader": "4.2.1",
        "svgo": "1.3.2",
        "svgo-loader": "2.2.1",
        "typescript": "3.8.3",
        "uuid": "^8.3.2",
        "webpack": "^4.0.0",
        "websocket": "^1.0.32",
        "ws-heartbeat": "^1.2.0"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@bitwarden/cli": "^1.13.3",
        "acorn": "7.1.1",
        "cross-env": "^7.0.3",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.2",
        "fx": "^20.0.2",
        "husky": "4.2.3",
        "identity-obj-proxy": "3.0.0",
        "jest": "25.2.4",
        "jest-svg-transformer": "1.0.0",
        "lint-staged": "10.1.0",
        "nodemon": "2.0.2",
        "prettier": "2.0.2",
        "stylelint": "^12.0.0",
        "stylelint-config-prettier": "8.0.1",
        "stylelint-config-recommended": "3.0.0",
        "stylelint-scss": "3.16.0",
        "ts-node": "8.8.1",
        "tslint": "6.1.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-eslint-rules": "5.4.0",
        "tslint-react": "4.2.0"
    }
}